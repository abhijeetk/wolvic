{
  "manifest_version": 2,
  "name": "Wolvic WebXR Automator",
  "version": "1.0",
  "description": "Enter WebXR Experiences Automatically",
  "browser_specific_settings": {
    "gecko": {
      "id": "wolvic-autowebxr@igalia.com"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "*://*/*"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_idle",
      "all_frames": true
    }
  ]
}
